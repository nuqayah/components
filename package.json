{
    "name": "components",
    "version": "2.0.54",
    "type": "module",
    "scripts": {
        "format": "prettier --write .",
        "typecheck": "tsc --noEmit",
        "typegen": "tsc && pnpm format",
        "prepublish-gh": "pnpm typegen",
        "publish-gh": "VER=$(npm --no-git-tag-version version patch) && git add package.json && git commit --amend --no-edit && git tag -f $VER && git push -f && git push --tags -f"
    },
    "exports": {
        ".": {
            "types": "./types/index.d.ts",
            "svelte": "./src/index.js"
        }
    },
    "types": "./types/index.d.ts",
    "svelte": "./src/index.js",
    "dependencies": {
        "@floating-ui/dom": "^1.6.12",
        "clsx": "^2.1.1",
        "diff-match-patch": "^1.0.5",
        "es-toolkit": "^1.32.0",
        "escape-string-regexp": "^5.0.0",
        "focus-trap": "^7.5.4",
        "tailwind-merge": "^3.3.0"
    },
    "peerDependencies": {
        "svelte": "^5.0.0"
    },
    "devDependencies": {
        "prettier": "^3.6.2",
        "prettier-plugin-svelte": "^3.4.0",
        "typescript": "^5.9.3"
    },
    "repository": "github:mustafa0x/components"
}
